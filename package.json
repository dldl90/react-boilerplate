{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "daniel's react boilerplate",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "build-babel": "npm run build-babel-server && npm run build-babel-client",
    "build-babel-server": "babel src/server --out-dir ./dist",
    "build-babel-client": "babel src/client --copy-files --out-dir ./dist/public",
    "start": "node ./dist/server.js",
    "test": "jest ./src",
    "clean": "rimraf dist node_modules"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./src/enzyme.setup.js",
    "setupFiles": ["raf/polyfill"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skinnyninja/react-boilerplate.git"
  },
  "keywords": [
    "Node",
    "React"
  ],
  "author": "Daniel Luong",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/skinnyninja/react-boilerplate/issues"
  },
  "homepage": "https://github.com/skinnyninja/react-boilerplate#readme",
  "dependencies": {
    "express": "^4.16.3",
    "raf": "^3.4.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.4",
    "react-test-renderer": "^16.3.2",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.7.2"
  }
}
